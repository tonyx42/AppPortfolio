<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#4e4e4e"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".main_menu">

    <TextView
        android:text="@string/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="12pt"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:id="@+id/header" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_margin="5dp"
        android:padding="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app1"
        android:background="#CDDC39"
        android:onClick="makeToast"
        android:id="@+id/app1" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_margin="5dp"
        android:padding="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app2"
        android:background="#CDDC39"
        android:onClick="makeToast"
        android:id="@+id/app2" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_margin="5dp"
        android:padding="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app3"
        android:background="#CDDC39"
        android:onClick="makeToast"
        android:id="@+id/app3" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_margin="5dp"
        android:padding="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app4"
        android:background="#CDDC39"
        android:onClick="makeToast"
        android:id="@+id/app4" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_margin="5dp"
        android:padding="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app5"
        android:background="#CDDC39"
        android:onClick="makeToast"
        android:id="@+id/app5" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_margin="5dp"
        android:padding="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app6"
        android:background="#B2FF59"
        android:onClick="makeToast"
        android:id="@+id/app6" />

</LinearLayout>
